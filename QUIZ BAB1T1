        <label for="q3a3">Mengabaikan detail yang tidak penting</label><br>

        <!-- Additional questions would follow the same pattern -->

        <!-- Submit Button -->
        <button type="button" onclick="checkAnswers()">Cek Jawaban</button>
    </form>

    <script>
        function checkAnswers() {
            var totalCorrect = 0;
            var answers = document.forms['quizForm'];
            var resultText = "";
            for (var i = 0; i < answers.length; i++) {
                if (answers[i].checked) {
                    if (answers[i].value === "correct") {
                        totalCorrect++;
                    }
                }
            }
            resultText = "Anda menjawab " + totalCorrect + " pertanyaan dengan benar dari " + answers.length/3 + " pertanyaan.";
            alert(resultText);
        }
    </script>
